@model AuctionPN.Models.Item
@{
    ViewData["Title"] = "Delete";
}
@{
    var item = ViewBag.Item as Item;
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ItemName
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="ItemName" value="@item.ItemName" readonly />
        </dd>
        <dt class = "col-sm-2">
            ItemDescription
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="ItemDescription" value=" @item.ItemDescription" readonly />
        </dd>
        <dt class = "col-sm-2">
            MinimumBidIncrement
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="MinimumBidIncrement" value=" @item.MinimumBidIncrement" readonly />
        </dd>
        <dt class = "col-sm-2">
            ItemImage
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="ItemImage" value=" @item.ItemImage" readonly />
        </dd>
        <dt class = "col-sm-2">
            CurrentPrice
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CurrentPrice" value=" @item.CurrentPrice" readonly />
        </dd>
        <dt class = "col-sm-2">
            CurrentPrice
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CurrentPrice" value=" @item.CurrentPrice" readonly />
        </dd>
        <dt class = "col-sm-2">
            ItemType
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="ItemType" value=" @item.ItemType" readonly />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" value="@item.ItemId"/>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
