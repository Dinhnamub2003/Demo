@model AuctionPN.Models.Member
@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;
@{
    ViewData["Title"] = "Details";
}
@{
    var httpContext = ViewContext.HttpContext;
    var jsonString = httpContext.Session.GetString("User");
    JObject user = null;
    if (!string.IsNullOrEmpty(jsonString))
    {
        user = JObject.Parse(jsonString);
    }
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @user["Name"]
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @user["Address"]
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @user["Email"]
        </dd>
        <dt class = "col-sm-2">
            Expirationdate
        </dt>
        <dd class = "col-sm-10">
            @user["Expirationdate"]
        </dd>
        <dt class = "col-sm-2">
            Password
        </dt>
        <dd class = "col-sm-10">
            @user["Password"]
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Members" asp-action="Edit" asp-route-id="@user["MemberId"]">Edit</a>
</div>
